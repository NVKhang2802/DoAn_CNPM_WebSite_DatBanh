@model IEnumerable<WebSite_DatBanh.Models.SanPham>
@{
    ViewData["Title"] = "Danh sách Sản phẩm";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var currentUserRole = Context.Session.GetString("ROLE");
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-light border-0">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách Sản phẩm</h5>

            @if (currentUserRole == "Quản lý")
            {
                <a asp-action="Add" class="btn btn-success btn-sm">
                    <i class="fas fa-plus me-2"></i> Thêm mới
                </a>
            }
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@Url.Content(item.ANHSP ?? "")" alt="@item.TENSP"
                                 style="width: 60px; height: 60px; object-fit: cover;" class="rounded" />
                        </td>
                        <td>@item.TENSP</td>
                        <td>@String.Format("{0:N0}đ", item.GIA)</td>
                        <td>
                            @if (item.TRANGTHAI == "CÒN HÀNG")
                            {
                                <span class="badge bg-success">@item.TRANGTHAI</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@item.TRANGTHAI</span>
                            }
                        </td>
                        <td class="text-end">
                            @if (currentUserRole == "Quản lý")
                            {
                                <a asp-action="Edit" asp-route-id="@item.MASP" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MASP" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Xóa
                                </a>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Chỉ xem</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>