@{
    var currentUserRole = Context.Session.GetString("ROLE"); 
    var currentUserName = Context.Session.GetString("HOTEN_ADMIN") ?? "Admin";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin | CakeShop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa; /* Màu nền admin */
        }

        /* CSS cho Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            width: 250px;
            padding: 1rem;
            background-color: #212529; /* Màu nền Dark của Bootstrap */
            color: #fff;
        }

            .sidebar .nav-link {
                color: #adb5bd; /* Màu chữ xám */
                font-size: 1.05rem;
                padding: 0.75rem 1rem;
                border-radius: 0.25rem;
            }

                .sidebar .nav-link:hover {
                    background-color: #343a40;
                    color: #fff;
                }

                .sidebar .nav-link.active {
                    background-color: #0d6efd; /* Màu Primary */
                    color: #fff;
                    font-weight: 500;
                }

                .sidebar .nav-link .fa-fw {
                    width: 1.25em; /* Căn chỉnh icon */
                }

        /* CSS cho Content */
        .main-content {
            margin-left: 250px; /* Bằng chiều rộng sidebar */
            padding: 1.5rem;
        }
    </style>
</head>
<body>

    <div class="sidebar d-flex flex-column p-3">
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
           class="d-flex align-items-center mb-3 text-white text-decoration-none">
            <i class="fas fa-cookie-bite fs-3 me-2"></i>
            <span class="fs-4 fw-bold">CakeShop Admin</span>
        </a>
        <hr>

        <ul class="nav nav-pills flex-column mb-auto">

            @if (currentUserRole == "Quản lý")
            {
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                       class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-fw fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Employee" asp-action="Index"
                       class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Employee" ? "active" : "")">
                        <i class="fas fa-fw fa-users me-2"></i> Quản lý Nhân viên
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Report" asp-action="Index"
                       class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Report" ? "active" : "")">
                        <i class="fas fa-fw fa-chart-bar me-2"></i> Báo cáo Doanh thu
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Database" asp-action="Index"
                       class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Database" ? "active" : "")">
                        <i class="fas fa-fw fa-server me-2"></i> Backup/Restore
                    </a>
                </li>
            }

            @if (currentUserRole == "Quản lý" || currentUserRole == "Nhân viên bán hàng")
            {
                <li>
                    <a asp-area="Admin" asp-controller="Customer" asp-action="Index"
                       class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Customer" ? "active" : "")">
                        <i class="fas fa-fw fa-address-book me-2"></i> Quản lý Khách hàng
                    </a>
                </li>
            }

            <li>
                <a asp-area="Admin" asp-controller="Product" asp-action="Index"
                   class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Product" ? "active" : "")">
                    <i class="fas fa-fw fa-cake-candles me-2"></i> Quản lý Sản phẩm
                </a>
            </li>

            <li>
                <a asp-area="Admin" asp-controller="Order" asp-action="Index"
                   class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Order" ? "active" : "")">
                    <i class="fas fa-fw fa-receipt me-2"></i> Quản lý Đơn hàng
                </a>
            </li>
        </ul>
        <hr>
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
               data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-circle fs-4 me-2"></i>
                <strong>@currentUserName</strong>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index" target="_blank">
                        <i class="fas fa-fw fa-globe me-2"></i> Xem trang web
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Account" asp-action="Logout">
                        <i class="fas fa-fw fa-sign-out-alt me-2"></i> Đăng xuất
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <main class="main-content">
        @if (TempData["ErrorAdmin"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorAdmin"]</div>
        }
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>