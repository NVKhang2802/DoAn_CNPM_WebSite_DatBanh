@model WebSite_DatBanh.Models.KhachHang
@{
    ViewData["Title"] = "Chi tiết Khách hàng";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row g-4">
    <div class="col-lg-5">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light border-0">
                <h5 class="mb-0">Thông tin: @Model.HOTEN</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Mã KH:</dt>
                    <dd class="col-sm-8">@Model.MAKH</dd>

                    <dt class="col-sm-4">Tên ĐN:</dt>
                    <dd class="col-sm-8">@Model.TENDN</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.EMAIL</dd>

                    <dt class="col-sm-4">SĐT:</dt>
                    <dd class="col-sm-8">@Model.SDT</dd>

                    <dt class="col-sm-4">Địa chỉ:</dt>
                    <dd class="col-sm-8">@Model.DIACHI</dd>
                </dl>

                <hr />
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-7">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light border-0">
                <h5 class="mb-0">Lịch sử Đơn hàng (@Model.DONHANG.Count())</h5>
            </div>
            <div class="card-body p-0">
                @if (Model.DONHANG.Any())
                {
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Mã ĐH</th>
                                <th>Ngày đặt</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var donHang in Model.DONHANG.OrderByDescending(d => d.NGAYDAT))
                            {
                                <tr>
                                    <td>@donHang.MADH</td>
                                    <td>@donHang.NGAYDAT?.ToString("dd/MM/yyyy")</td>
                                    <td>@String.Format("{0:N0}đ", donHang.TONGTIEN)</td>
                                    <td>@donHang.TRANGTHAI</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center text-muted p-3">Khách hàng này chưa có đơn hàng nào.</p>
                }
            </div>
        </div>
    </div>
</div>