@model IEnumerable<WebSite_DatBanh.Models.NhanVien>
@{
    ViewData["Title"] = "Danh sách Nhân viên";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-light border-0">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách Nhân viên</h5>
            <a asp-action="Add" class="btn btn-success btn-sm">
                <i class="fas fa-plus me-2"></i> Thêm mới
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Mã NV</th>
                    <th>Họ tên</th>
                    <th>Chức vụ</th>
                    <th>Trạng thái</th>
                    <th>Tên ĐN</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MANV</td>
                        <td>@item.HOTEN</td>
                        <td>@item.CHUCVU</td>
                        <td>
                            @if (item.TRANGTHAI == "Đang làm")
                            {
                                <span class="badge bg-success">@item.TRANGTHAI</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@item.TRANGTHAI</span>
                            }
                        </td>
                        <td>@item.TENDN</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.MANV" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Sửa
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.MANV" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>