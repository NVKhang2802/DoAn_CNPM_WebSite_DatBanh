@{
    ViewData["Title"] = "Thêm nhân viên";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light border-0">
                <h5 class="mb-0">Thêm nhân viên mới</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold" for="HOTEN">Họ tên</label>
                        <input class="form-control" name="HOTEN" id="HOTEN" placeholder="Nhập họ tên nhân viên" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold" for="CHUCVU">Chức vụ</label>
                        <select class="form-select" name="CHUCVU" id="CHUCVU">
                            <option value="Nhân viên bán hàng">Nhân viên bán hàng</option>
                            <option value="Nhân viên giao hàng">Nhân viên giao hàng</option>
                            <option value="Quản lý">Quản lý</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold" for="TENDN">Tên đăng nhập</label>
                        <input class="form-control" name="TENDN" id="TENDN" placeholder="Tên đăng nhập (vd: admin, nv01...)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold" for="MATKHAU">Mật khẩu</label>
                        <input type="password" class="form-control" name="MATKHAU" id="MATKHAU" placeholder="Mật khẩu tạm thời" />
                    </div>

                    <hr />

                    <button type"submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i> Lưu lại
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i> Hủy
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>