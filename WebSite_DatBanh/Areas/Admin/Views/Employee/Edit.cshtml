@model WebSite_DatBanh.Models.NhanVien
@{
    ViewData["Title"] = "Sửa thông tin Nhân viên";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light border-0">
                <h5 class="mb-0">Sửa thông tin: @Model.HOTEN</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="MANV" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mã Nhân Viên</label>
                        <input asp-for="MANV" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="HOTEN"></label>
                        <input class="form-control" asp-for="HOTEN" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="CHUCVU"></label>
                        <select class="form-select" asp-for="CHUCVU">
                            <option value="Nhân viên bán hàng">Nhân viên bán hàng</option>
                            <option value="Nhân viên giao hàng">Nhân viên giao hàng</option>
                            <option value="Quản lý">Quản lý</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="TRANGTHAI"></label>
                        <select class="form-select" asp-for="TRANGTHAI">
                            <option value="Đang làm">Đang làm</option>
                            <option value="Nghỉ phép">Nghỉ phép</option>
                            <option value="Đã nghỉ">Đã nghỉ</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="TENDN"></label>
                        <input class="form-control" asp-for="TENDN" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="MATKHAU"></label>
                        <input type="password" class="form-control" asp-for="MATKHAU" />
                    </div>

                    <input type="hidden" asp-for="NGAYVAOLAM" />

                    <hr />

                    <button type"submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i> Hủy
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>