@model IEnumerable<WebSite_DatBanh.Models.DonHang>
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-3">Dashboard</h1>

<div class="row g-4">
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex align-items-center">
                <div class="flex-grow-1">
                    <h5 class="card-title text-muted mb-1">Doanh thu (Tháng)</h5>
                    <h3 class="fw-bold mb-0">@String.Format("{0:N0}đ", ViewBag.MonthlyRevenue)</h3>
                </div>
                <div class="fs-1 text-primary opacity-50">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex align-items-center">
                <div class="flex-grow-1">
                    <h5 class="card-title text-muted mb-1">Đơn hàng mới</h5>
                    <h3 class="fw-bold mb-0">@ViewBag.NewOrders</h3>
                </div>
                <div class="fs-1 text-success opacity-50">
                    <i class="fas fa-receipt"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex align-items-center">
                <div class="flex-grow-1">
                    <h5 class="card-title text-muted mb-1">Khách hàng mới (30d)</h5>
                    <h3 class="fw-bold mb-0">@ViewBag.NewCustomers</h3>
                </div>
                <div class="fs-1 text-info opacity-50">
                    <i class="fas fa-user-plus"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex align-items-center">
                <div class="flex-grow-1">
                    <h5 class="card-title text-muted mb-1">Sản phẩm (Còn hàng)</h5>
                    <h3 class="fw-bold mb-0">@ViewBag.TotalProducts</h3>
                </div>
                <div class="fs-1 text-warning opacity-50">
                    <i class="fas fa-cake-candles"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex align-items-center">
                <div class="flex-grow-1">
                    <h5 class="card-title text-muted mb-1">Nhân viên (Đang làm)</h5>
                    <h3 class="fw-bold mb-0">@ViewBag.ActiveStaff</h3>
                </div>
                <div class="fs-1 text-secondary opacity-50">
                    <i class="fas fa-users-cog"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex align-items-center">
                <div class="flex-grow-1">
                    <h5 class="card-title text-muted mb-1">Tài khoản hoạt động</h5>
                    <h3 class="fw-bold mb-0">@ViewBag.ActiveAccounts</h3>
                </div>
                <div class="fs-1 text-success opacity-50">
                    <i class="fas fa-user-check"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header bg-light border-0">
        <h5 class="mb-0">Đơn hàng gần đây</h5>
    </div>
    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MADH</td>
                            <td>@(item.KHACHHANG?.HOTEN ?? "N/A")</td>
                            <td>@item.NGAYDAT?.ToString("dd/MM/yyyy")</td>
                            <td>@String.Format("{0:N0}đ", item.TONGTIEN)</td>
                            <td>
                                @if (item.TRANGTHAI == "HOÀN THÀNH")
                                {
                                    <span class="badge bg-success">@item.TRANGTHAI</span>
                                }
                                else if (item.TRANGTHAI == "ĐÃ HỦY")
                                {

                                    <span class="badge bg-danger">@item.TRANGTHAI</span>
                                }
                                else
                                {

                                    <span class="badge bg-warning text-dark">@item.TRANGTHAI</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-controller="Order" asp-action="Details" asp-route-id="@item.MADH" class="btn btn-info btn-sm">
                                    Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center text-muted p-3">Không có đơn hàng nào gần đây.</p>
        }
    </div>
</div>