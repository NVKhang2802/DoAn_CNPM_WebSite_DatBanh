@model IEnumerable<WebSite_DatBanh.Models.DonHang>
@{
    ViewData["Title"] = "Danh sách Đơn hàng";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var currentUserRole = Context.Session.GetString("ROLE");
    bool canEdit = (currentUserRole == "Quản lý" || currentUserRole == "Nhân viên bán hàng");
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-light border-0">
        <div class="d-flex justify-content-between align-items-center">

            @*Lọc Sản phẩm*@
            <form asp-action="Index" method="get" class="d-flex me-2">
                <select name="statusFilter" class="form-select form-select-sm" onchange="this.form.submit()">
                    <option value="">Tất cả trạng thái</option>
                    @foreach (var status in (List<string>)ViewBag.StatusList)
                    {
                        <option value="@status" selected="@(ViewBag.CurrentFilter == status)">@status</option>
                    }
                </select>
            </form>

            <h5 class="mb-0">Danh sách Đơn hàng</h5>

            @if (canEdit)
            {
                <a asp-action="Add" class="btn btn-success btn-sm">
                    <i class="fas fa-plus me-2"></i> Thêm đơn (offline)
                </a>
            }
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Mã ĐH</th>
                    <th>Khách hàng</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MADH</td>
                        <td>@(item.KHACHHANG?.HOTEN ?? "Khách vãng lai")</td>
                        <td>@item.NGAYDAT?.ToString("dd/MM/yyyy")</td>
                        <td>@String.Format("{0:N0}đ", item.TONGTIEN)</td>
                        <td>
                            @if (item.TRANGTHAI == "Hoàn thành")
                            {
                                <span class="badge bg-success">@item.TRANGTHAI</span>
                            }
                            else if (item.TRANGTHAI == "Đã hủy")
                            {
                                <span class="badge bg-danger">@item.TRANGTHAI</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">@item.TRANGTHAI</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.MADH" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Chi tiết
                            </a>

                            @if (canEdit)
                            {
                                <a asp-action="Delete" asp-route-id="@item.MADH" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Xóa
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>