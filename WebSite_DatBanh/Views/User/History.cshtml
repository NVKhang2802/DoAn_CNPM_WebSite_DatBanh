@model IEnumerable<WebSite_DatBanh.Models.DonHang>
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <h2 class="mb-4">Đơn hàng của tôi</h2>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">Bạn chưa có đơn hàng nào. <a asp-controller="ProductController1" asp-action="Index">Mua sắm ngay</a></div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Mã ĐH</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.MADH</strong></td>
                                <td>@item.NGAYDAT?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-danger fw-bold">@String.Format("{0:N0}đ", item.TONGTIEN)</td>
                                <td>
                                    @if (item.TRANGTHAI == "HOÀN THÀNH")
                                    {
                                        <span class="badge bg-success">Hoàn thành</span>
                                    }
                                    else if (item.TRANGTHAI == "ĐÃ HỦY")
                                    {

                                        <span class="badge bg-danger">Đã hủy</span>
                                    }
                                    else if (item.TRANGTHAI == "ĐANG GIAO HÀNG")
                                    {

                                        <span class="badge bg-primary">Đang giao</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-warning text-dark">Đang xử lý</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="HistoryDetail" asp-route-id="@item.MADH" class="btn btn-sm btn-outline-primary">
                                        Xem chi tiết
                                    </a>

                                    @if (item.TRANGTHAI == "ĐANG XỬ LÝ")
                                    {
                                        <form asp-action="CancelOrder" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn hủy đơn này?');">
                                            <input type="hidden" name="id" value="@item.MADH" />
                                            <button class="btn btn-sm btn-outline-danger">Hủy đơn</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    <div class="mt-3">
        <a asp-controller="User" asp-action="Index" class="text-decoration-none">&larr; Quay lại trang cá nhân</a>
    </div>
</div>