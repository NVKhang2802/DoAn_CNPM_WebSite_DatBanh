@{
    ViewData["Title"] = "Liên hệ";
    Layout = "_Layout";
}

<section class="py-5" style="margin-top: 80px;">
    <div class="container">
        <!-- Header -->
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold text-primary">
                <i class="fas fa-envelope me-3"></i>Liên Hệ
            </h1>
            <p class="lead text-muted">Chúng tôi luôn sẵn sàng lắng nghe bạn</p>
        </div>

        <div class="row g-4">
            <!-- Contact Info -->
            <div class="col-lg-5">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <h4 class="text-primary mb-4">
                            <i class="fas fa-info-circle me-2"></i>Thông tin liên hệ
                        </h4>
                        
                        <div class="d-flex mb-4">
                            <div class="flex-shrink-0">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Địa chỉ</h6>
                                <p class="text-muted mb-0">123 Đường ABC, Quận XYZ, TP. Hồ Chí Minh</p>
                            </div>
                        </div>
                        
                        <div class="d-flex mb-4">
                            <div class="flex-shrink-0">
                                <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-phone"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Điện thoại</h6>
                                <p class="text-muted mb-0">0123 456 789</p>
                            </div>
                        </div>
                        
                        <div class="d-flex mb-4">
                            <div class="flex-shrink-0">
                                <div class="bg-warning text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-envelope"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Email</h6>
                                <p class="text-muted mb-0">contact@abvncake.com</p>
                            </div>
                        </div>
                        
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <div class="bg-info text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-clock"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Giờ mở cửa</h6>
                                <p class="text-muted mb-0">7:00 - 21:00 (Thứ 2 - Chủ nhật)</p>
                            </div>
                        </div>
                        
                        <!-- Social Media -->
                        <hr class="my-4">
                        <h6 class="mb-3">Theo dõi chúng tôi</h6>
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-outline-primary rounded-circle" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="btn btn-outline-danger rounded-circle" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="#" class="btn btn-outline-info rounded-circle" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;">
                                <i class="fab fa-tiktok"></i>
                            </a>
                            <a href="#" class="btn btn-outline-success rounded-circle" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;">
                                <i class="fab fa-whatsapp"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Contact Form -->
            <div class="col-lg-7">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <h4 class="text-primary mb-4">
                            <i class="fas fa-paper-plane me-2"></i>Gửi tin nhắn cho chúng tôi
                        </h4>
                        
                        <form>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Họ và tên <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" placeholder="Nhập họ tên của bạn" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Email <span class="text-danger">*</span></label>
                                    <input type="email" class="form-control" placeholder="Nhập email của bạn" required>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Số điện thoại</label>
                                    <input type="tel" class="form-control" placeholder="Nhập số điện thoại">
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Chủ đề</label>
                                    <select class="form-select">
                                        <option value="">-- Chọn chủ đề --</option>
                                        <option>Đặt bánh</option>
                                        <option>Tư vấn sản phẩm</option>
                                        <option>Khiếu nại</option>
                                        <option>Hợp tác kinh doanh</option>
                                        <option>Khác</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Nội dung <span class="text-danger">*</span></label>
                                    <textarea class="form-control" rows="5" placeholder="Nhập nội dung tin nhắn..." required></textarea>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="fas fa-paper-plane me-2"></i>Gửi tin nhắn
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Map -->
        <div class="mt-5">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.5177580567773!2d106.69901661533417!3d10.771594392324597!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f40a3b49e59%3A0xa1bd14e483a602db!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBLaG9hIGjhu41jIFThu7Egbmhpw6puIC0gxJDhuqFpIGjhu41jIFF14buRYyBnaWEgVFAuSENN!5e0!3m2!1svi!2s!4v1639475489841!5m2!1svi!2s" 
                        width="100%" 
                        height="350" 
                        style="border:0; border-radius: 0 0 8px 8px;" 
                        allowfullscreen="" 
                        loading="lazy">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>
