@model IEnumerable<WebSite_DatBanh.Models.ChiTietGioHang>
@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal tongTien = Model.Sum(x => (x.SANPHAM?.GIA ?? 0) * x.SOLUONG);
}

@section Styles {
    <style>
        .cart-header { background-color: #f8f9fa; border-bottom: 2px solid #e9ecef; }
        .product-img-cart { width: 80px; height: 80px; object-fit: cover; border-radius: 8px; }
        .quantity-input { max-width: 60px; text-align: center; }
        .summary-card { background-color: #fff; border: 1px solid rgba(0,0,0,.125); position: sticky; top: 100px; }
    </style>
}

<div class="container py-5">
    <h2 class="mb-4 fw-bold text-primary"><i class="fas fa-shopping-bag me-2"></i>Giỏ hàng của bạn</h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-3">
            <img src="https://cdn-icons-png.flaticon.com/512/2038/2038854.png" style="width: 100px; opacity: 0.5" class="mb-3" />
            <h4>Giỏ hàng của bạn đang trống!</h4>
            <p class="text-muted">Hãy thêm những chiếc bánh ngon tuyệt vào đây nhé.</p>
            <a asp-controller="ProductController1" asp-action="Index" class="btn btn-primary mt-2">
                <i class="fas fa-arrow-left me-2"></i> Tiếp tục mua sắm
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header cart-header py-3">
                        <div class="row fw-bold">
                            <div class="col-6">Sản phẩm</div>
                            <div class="col-2 text-center">Giá</div>
                            <div class="col-2 text-center">Số lượng</div>
                            <div class="col-2 text-end">Thành tiền</div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var item in Model)
                        {
                            <div class="row align-items-center p-3 border-bottom m-0">
                                <div class="col-6 d-flex align-items-center">
                                    <img src="@Url.Content(item.SANPHAM?.ANHSP ?? "")" class="product-img-cart border me-3" />
                                    <div>
                                        <h6 class="mb-1 text-dark fw-bold">@item.SANPHAM?.TENSP</h6>
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border">
                                            Size: @item.KICHCO
                                        </span>
                                        <form asp-action="Remove" method="post" class="mt-2">
                                            <input type="hidden" name="magh" value="@item.MAGH" />
                                            <input type="hidden" name="masp" value="@item.MASP" />
                                            <input type="hidden" name="kichco" value="@item.KICHCO" />
                                            <button class="btn btn-link text-danger p-0 text-decoration-none small">
                                                <i class="fas fa-trash-alt me-1"></i> Xóa
                                            </button>
                                        </form>
                                    </div>
                                </div>

                                <div class="col-2 text-center text-muted">
                                    @String.Format("{0:N0}đ", item.SANPHAM?.GIA)
                                </div>

                                <div class="col-2 text-center">
                                    <form asp-action="UpdateQuantity" method="post">
                                        <input type="hidden" name="magh" value="@item.MAGH" />
                                        <input type="hidden" name="masp" value="@item.MASP" />
                                        <input type="hidden" name="kichco" value="@item.KICHCO" />

                                        <input type="number" name="qty" value="@item.SOLUONG" min="1"
                                               class="form-control form-control-sm quantity-input mx-auto mb-1"
                                               onchange="this.form.submit()" />
                                    </form>
                                </div>

                                <div class="col-2 text-end fw-bold text-primary">
                                    @String.Format("{0:N0}đ", (item.SANPHAM?.GIA ?? 0) * item.SOLUONG)
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card summary-card shadow-sm border-0 rounded-3">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="mb-0 fw-bold">Cộng giỏ hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Tạm tính:</span>
                            <span class="fw-bold">@String.Format("{0:N0}đ", tongTien)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Phí vận chuyển:</span>
                            <span class="text-success fw-bold">Miễn phí</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5 fw-bold">Tổng cộng:</span>
                            <span class="h4 fw-bold text-danger">@String.Format("{0:N0}đ", tongTien)</span>
                        </div>

                        <div class="d-grid gap-2">
                            <a asp-controller="Payment" asp-action="Index" class="btn btn-primary btn-lg fw-bold">
                                <i class="fas fa-check-circle me-2"></i> Tiến hành thanh toán
                            </a>
                            <a asp-controller="ProductController1" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Mua thêm bánh khác
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>