@model IEnumerable<WebSite_DatBanh.Models.SanPham>

@{
    ViewData["Title"] = "Kết quả tìm kiếm";
}

<div class="container mt-4">
    <h3>Kết quả tìm kiếm cho: "<span class="text-primary">@ViewBag.Query</span>"</h3>

    <div class="row mt-4">
        @if (Model != null && Model.Any())
        {
            foreach (var sp in Model)
            {
                var path = string.IsNullOrEmpty(sp.ANHSP) ? "~/img/cake/hinh1.png" : sp.ANHSP;

                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@Url.Content(path)" class="card-img-top" alt="@sp.TENSP" />
                        <div class="card-body text-center">
                            <h5 class="card-title">@sp.TENSP</h5>
                            <p class="text-danger">@String.Format("{0:N0}đ", sp.GIA)</p>
                            <a asp-controller="ProductController1" asp-action="Detail" asp-route-id="@sp.MASP" class="btn btn-outline-success btn-sm">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-muted text-center">Không tìm thấy sản phẩm nào phù hợp.</div>
        }
    </div>
</div>
